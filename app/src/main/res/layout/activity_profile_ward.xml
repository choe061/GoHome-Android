<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.67dp"
        android:layout_alignLeft="@+id/ward1"
        android:textColor="@color/colorPrimary"
        android:textSize="19.67dp"
        android:text="피보호자 1"/>
    <Button
        android:id="@+id/delete_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text1"
        android:layout_above="@+id/ward1"
        android:text="1번 삭제"/>

    <EditText
        android:id="@+id/ward1"
        android:layout_width="282.00dp"
        android:layout_height="33.67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text1"
        android:background="@drawable/protector_box"
        android:gravity="center"
        android:hint="피보호자 번호를 입력하세요"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/ward1_code"
        android:layout_width="282.00dp"
        android:layout_height="33.67dp"
        android:background="@drawable/protector_box"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ward1"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:hint="상대의 고유번호를 입력하세요"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ward1_code"
        android:layout_marginTop="32.67dp"
        android:layout_alignLeft="@+id/ward1"
        android:textColor="@color/colorPrimary"
        android:textSize="19.67dp"
        android:text="피보호자 2"/>
    <Button
        android:id="@+id/delete_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text2"
        android:layout_above="@+id/ward2"
        android:text="2번 삭제"/>

    <EditText
        android:id="@+id/ward2"
        android:layout_width="282.00dp"
        android:layout_height="33.67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text2"
        android:background="@drawable/protector_box"
        android:gravity="center"
        android:hint="피보호자 번호를 입력하세요"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/ward2_code"
        android:layout_width="282.00dp"
        android:layout_height="33.67dp"
        android:background="@drawable/protector_box"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ward2"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:hint="상대의 고유번호를 입력하세요"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ward2_code"
        android:layout_marginTop="32.67dp"
        android:layout_alignLeft="@+id/ward2"
        android:textColor="@color/colorPrimary"
        android:textSize="19.67dp"
        android:text="피보호자 3"/>
    <Button
        android:id="@+id/delete_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text3"
        android:layout_above="@+id/ward3"
        android:text="2번 삭제"/>

    <EditText
        android:id="@+id/ward3"
        android:layout_width="282.00dp"
        android:layout_height="33.67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text3"
        android:background="@drawable/protector_box"
        android:gravity="center"
        android:hint="피보호자 번호를 입력하세요"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/ward3_code"
        android:layout_width="282.00dp"
        android:layout_height="33.67dp"
        android:background="@drawable/protector_box"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ward3"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:hint="상대의 고유번호를 입력하세요"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />

    <Button
        android:id="@+id/ward_save_btn"
        android:layout_width="213.67dp"
        android:layout_height="33.67dp"
        android:layout_below="@+id/ward3_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ward_save_btn"/>

</RelativeLayout>